<effect>
	<name>Angular Blur</name>
	<author>ower396</author>
	<description>Directional blur, but better
	https://www.ronja-tutorials.com/post/023-postprocessing-blur
	</description>
	<BackgroundTexture>1</BackgroundTexture>

	<sampler>
		<index>1</index>
		<addressU>clamp</addressU>
		<addressV>clamp</addressV>
	</sampler>

	<parameter>
		<name>Use Background</name>
		<code>BG</code>
		<type>bool</type>
		<property>checkbox</property>
		<value>true</value>
	</parameter>

	<parameter>
		<name>Intensity</name>
		<code>intensity</code>
		<type>float</type>
		<property>edit</property>
		<value>1</value>
	</parameter>

	<parameter>
		<name>Angle</name>
		<code>angle</code>
		<type>float</type>
		<property>edit</property>
		<value>45</value>
	</parameter>
</effect>